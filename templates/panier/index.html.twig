    <table class="table">
        <thead>
            <tr>
                <th>IdPa</th>
                <th>Quantite</th>
                <th>Coupon</th>
                <th>IdP</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.idPa }}</td>
                <td>{{ panier.quantite }}</td>
                <td>{{ panier.coupon }}</td>
                <td>{{ panier.idP }}</td>
                <td>
